<h1>Sign up</h1>

<%= form_for :user, url: '/users' do |f| %>

  Name: <%= f.text_field :name %>
  Email: <%= f.text_field :email %>
  Password: <%= f.password_field :password, placeholder: "Must be at least 8 characters"  %>
  Password Confirmation: <%= f.password_field :password_confirmation, placeholder: "Must be at least 8 characters" %>
  <span class="waves-effect waves-light btn"><%= f.submit "Sign up" %></span>
<% end %>
